<p id="notice"><%= notice %></p>

<h1>Body Sites</h1>

<table>
  <thead>
    <tr>
      <th>Identifier</th>
      <th>Name</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @body_sites.each do |body_site| %>
      <tr>
        <td><%= body_site.identifier %></td>
        <td><%= body_site.name %></td>
        <td><%= body_site.region %></td>
        <td><%= link_to 'Show', body_site %></td>
        <td><%= link_to 'Edit', edit_body_site_path(body_site) %></td>
        <td><%= link_to 'Destroy', body_site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Body Site', new_body_site_path %>
